<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Which planet in the Solar System is the hottest?"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/flashcard_question" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/space1"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="Venus"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_below="@id/flashcard_answer" />

    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/space2"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="Mercury"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_below="@id/flashcard_answer2" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/space3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="Mars"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/eye"
        android:layout_width="match_parent"
        android:layout_height="27dp"

        android:layout_centerHorizontal="true"
        android:src="@drawable/normaleye"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/dashedeye"
        android:layout_width="match_parent"

        android:layout_height="27dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dasheye" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        android:id="@+id/addbutton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/pen"
        android:id="@+id/editbutton" />

    <ImageView
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_answer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-81dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_iconmonstr_arrow_right_circle_filled"
        android:visibility="visible" />


</RelativeLayout>